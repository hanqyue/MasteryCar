<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    </style>
    <style name="about_title_style">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/more_subtitle</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>

    <style name="about_content_style">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/detailpanel_bg</item>
        <item name="android:padding">15.0dip</item>
    </style>

    <style name="top_bg_style">
        <item name="android:background">@drawable/top_bg_blue</item>
    </style>

    <style name="all_top_title_background">
        <item name="android:background">@drawable/app_title_background</item>
    </style>

    <style name="all_bg_background">
        <item name="android:background">#f3f3f3</item>
    </style>
    <style name="bg_style">
        <item name="android:background">@color/color_bg</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/zoomin</item>
        <item name="android:windowExitAnimation">@anim/zoomout</item>
    </style>
</resources>
